{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",
        "declaration": false,
        "downlevelIteration": true,
        "importHelpers": true,
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2015",
        "alwaysStrict": true,

        "baseUrl": "./",
        "moduleResolution": "Node",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
}